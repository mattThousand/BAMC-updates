.push
.wrap
  %h3.section_title=@track.name
  %p.track_author
    =link_to "by #{@track.user.username}", mc_path(@track.user)

  .theawesomeness
    .speakerl
    %canvas#pulsel
    %canvas#rightway
    .speakerr
    %canvas#pulser
    %canvas#wrongway
    .wrongwaygradient

  .controls
    %button#start{:onclick => "startPlaying(this);"} Play
    %button#stop{:onclick => "stopPlaying(this); disabled"} Stop

  %a.track_share{:href => "https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fbamc.co/tracks/#{@track.id}", :target => "_blank"}
    Share on Facebook

  %a.track_share{"data-count" => "none", "data-url" => "http://bamc.co/tracks/#{@track.id}", :href => "https://twitter.com/share?text=Listen%20to%20my%20awesome%20track&url=http://bamc.co/tracks/#{@track.id}", :target => "_blank"}
    Share on Twitter

:javascript
  playTrack("#{@track.track}");
