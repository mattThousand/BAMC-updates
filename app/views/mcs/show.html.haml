.push
.wrap
  = image_tag @user.avatar.url(:regular), :class => 'avatar'
  %h3.section_title=@user.username
  %p.white="MC since #{@user.created_at.year}"
.wrap
  %h3.section_title="#{@user.username}'s tracks"
- if @user.tracks.any?
  %ul.tracks
    - @user.tracks.each do |track|
      - if track.state == 'public'
        %li.track_row
          .wrap
            %ul.track_list_items
              %li= track.name
              %li= track.beat.name
              %li=link_to '', track.track, class: 'track_preview'
              %li=link_to 'Show', track_path(track), class: 'button_big'
- else
  .wrap
    %p.white= "#{@user.username.upcase} doesn't have any beats right now"
.wrap
  %h3.section_title="#{@user.username}'s beats"
- if @user.beats.file_for_upload.any?
  %ul.beats
    - @user.beats.each do |beat|
      - if beat.state == 'public'
        %li.beat_row
          .wrap
            %ul.beat_list_items
              %li= beat.name
              %li= beat.beat.name
              %li=link_to '', beat.beat, class: 'beat_preview'
              %li=link_to 'Show', beat_path(beat), class: 'button_big'
- else
  .wrap
    %p.white= "#{@user.username.upcase} doesn't have any tracks right now"
