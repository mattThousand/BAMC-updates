.edgetop
  .wrap
    %h3.section_title My beats
  = render 'beats/track_row', :beats => @my_beats

.edge

.wrap
  %h3.section_title My public tracks
- if @tracks.any?
  %ul.tracks
    - @tracks.each do |track|
      - if track.state == 'public'
        %li.track_row
          .wrap
            %ul.dash_track_list_items
              %li= track.name
              %li= track.beat.name
              %li=link_to '', track.track, class: 'track_preview'
              %li=link_to 'Show', track_path(track), class: 'button_big'
              %li=link_to 'Make private', private_track_path(track), class: 'button_big button_bigger_blue'
              %li=link_to 'Delete', track_path(track), method: :delete, confirm: 'Are you sure you want to delete this track?', class: 'button_big button_red'
- else
  %p You don't have any public tracks right now

